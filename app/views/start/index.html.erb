
	<div id="Main">
		<div class="clearfix">
			<div class="flashpics">				
				<div id="loopedSlider">
					<div class="container">
						<div class="slides">
							<% for topic in @slide_topics %>
							<div>
								<p class="featured-thumb">
									<a href="<%= topic.show_url %>" target="_blank"><img src="<%= topic.cover_file_name %>" alt="<%= topic.title %>" /></a>
								</p>
								<h2 class="entry-title">
									<a href="<%= topic.show_url %>" target="_blank" title="<%= topic.title %>" rel="bookmark"><%= topic.title %></a>
								</h2>
							</div>
							<% end %>
						</div>
					</div>
					<ul class="pagination">
						<% 1.upto @slide_topics.length do |i| %>
						<li><a href="#" rel="1"><%= i %></a></li>
						<% end %>
					</ul>
				</div>
				<script type="text/javascript" charset="utf-8">
					$(function(){
						$('#loopedSlider').loopedSlider();
					});
				</script>
			</div>
			<div class="new_topics">
				<div class="new_topics_title">最新时尚</div>
				<ul class="new_topics_list">
					<% for topic in @new_topics %>
					<li><a href="<%= topic.show_url %>"><%= topic.title %></a></li>
					<% end %>
				</ul>
			</div>
		</div>
		<% 0.upto 3 do |c_id| %>
		<% @s1_topics = @topics_list[c_id] %>
		<div class="box">
			<div class="box_title">
				<h3><a href="#"><%= Category.find(c_id+1).name %></a></h3>
			</div>
			<div class="box_content clearfix">
				<div class="box_re_pic_item">
					<img src="<%= @s1_topics[0].cover %>" alt="" />
					<div class="box_re_pic_item_txt"><a href="<%= @s1_topics[0].show_url %>"><%= @s1_topics[0].title %></a></div>
				</div>
				<div class="box_items">
					<div class="box_re_item">
						<h4><a href="<%= @s1_topics[1].show_url %>"><%= @s1_topics[1].title %></a></h4>
						<p><%= @s1_topics[1].summary %>...<a href="<%= @s1_topics[1].show_url %>">[更多详细]</a></p>
					</div>
					<ul class="box_item_list clearfix" style="border-bottom:1px dashed #EBEBEB;">
						<% 2.upto 9 do |i| %>
						<li>
							<a href="<%= @s1_topics[i].show_url %>" title="<%= @s1_topics[i].title %>"><%= @s1_topics[i].title %></a>
						</li>
						<% end %>
					</ul>
					<ul class="box_item_list clearfix">
						<% 10.upto 17 do |i| %>
						<li>
							<a href="<%= @s1_topics[i].show_url %>" title="<%= @s1_topics[i].title %>"><%= @s1_topics[i].title %></a>
						</li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
		<% end %>
	</div>
	<div id="Side">
		<%= render "/partials/side" %>
	</div>